<div class="container">
  <div class="w-100" style="max-width: 600px;">
    <h5><strong><span class="bg-light text-dark px-1">新規会員登録</span></strong></h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class="table table-borderless">
        <tbody>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :last_name, "名前" %></th>
            <td>
              <div class="input-group">
                <span>(姓)</span>
                <%= f.text_field :last_name, class: "form-control", placeholder: "令和" %>
              </div>
            </td>
            <td>
              <div class="input-group">
                <span>(名)</span>
                <%= f.text_field :first_name,class: "form-control", placeholder: "道子" %>
              </div>
            </td>
          </tr>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :last_name_kana, "フリガナ" %></th>
            <td>
              <div class="input-group">
                <span>(セイ)</span>
                  <%= f.text_field :last_name_kana, class: "form-control", placeholder: "レイワ" %>
              </div>
            </td>
            <td>
              <div class="input-group">
                <span>(メイ)</span>
                  <%= f.text_field :first_name_kana, class: "form-control", placeholder: "ミチコ" %>
              </div>
            </td>
          </tr>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :email, "メールアドレス" %></th>
            <td colspan="3"><%= f.email_field :email, class: "form-control", placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
            <td colspan="3"><%= f.text_field :postal_code, class: "form-control", placeholder: "0000000" %></td>
          </tr>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :address, "住所" %></th>
            <td colspan="3"><%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
          </tr>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></th>
            <td colspan="3"><%= f.text_field :telephone_number, class: "form-control", placeholder: "00000000000" %></td>
          </tr>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </th>
            <td colspan="3">

              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th style="white-space: nowrap; width: 150px;"><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
            <td colspan="3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <div>
                <%= f.submit "新規登録", class: "btn btn-success" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>

    <% end %>

    <h5><strong><span class="bg-light text-dark px-1">既に登録済みの方</span></strong></h5>
    <p><%= render "public/shared/links" %>からログインしてください。</p>
  </div>
</div>
