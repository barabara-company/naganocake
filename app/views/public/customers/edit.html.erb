<div class="container my-5">
  <h3 class="bg-light text-dark d-inline-block px-3 py-2 rounded">会員情報編集</h3>

  <!-- 会員情報編集フォーム -->
  <%= form_with model: @customer, method: :patch, class: "mt-4" do |f| %>
    <div class="mb-3 d-flex align-items-center">
      <label class="form-label me-3 mb-0" style="width: 150px;">氏名</label>
      <div class="d-flex gap-2 flex-grow-1">
        <%= f.text_field :last_name, class: "form-control mr-5", style: "width: 200px;" %>
        <%= f.text_field :first_name, class: "form-control", style: "width: 200px;" %>
      </div>
    </div>
    <div class="mb-3 d-flex align-items-center">
      <label class="form-label me-3 mb-0" style="width: 150px;">フリガナ</label>
      <div class="d-flex gap-2 flex-grow-1">
        <%= f.text_field :last_name_kana, class: "form-control mr-5", style: "width: 200px;" %>
        <%= f.text_field :first_name_kana, class: "form-control", style: "width: 200px;" %>
      </div>
    </div>
    <div class="mb-3 d-flex align-items-center">
      <label class="form-label me-3 mb-0" style="width: 150px;">郵便番号</label>
      <%= f.text_field :postal_code, class: "form-control", style: "width: 200px;" %>
    </div>
    <div class="mb-3 d-flex align-items-center">
      <label class="form-label me-3 mb-0" style="width: 150px;">住所</label>
      <%= f.text_field :address, class: "form-control", style: "width: 700px;" %>
    </div>
    <div class="mb-3 d-flex align-items-center">
      <label class="form-label me-3 mb-0" style="width: 150px;">電話番号</label>
      <%= f.text_field :telephone_number, class: "form-control", style: "width: 200px;" %>
    </div>
    <div class="mb-3 d-flex align-items-center">
      <label class="form-label me-3 mb-0" style="width: 150px;">メールアドレス</label>
      <%= f.text_field :email, class: "form-control", style: "width: 200px;" %>
    </div>

    <!-- ボタンを入力フォームと左端を揃える -->
    <div class="d-flex justify-content-start" style="margin-left: 150px;">
      <%= f.submit "編集内容を保存", class: "btn btn-success me-3", style: "width: 250px; margin-right: 200px;" %>
      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>