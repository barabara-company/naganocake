<h1>配送先編集</h1>

<%= form_with(model: @address, local: true) do |f| %>
  <div>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, required: true, pattern: '\d{7}', maxlength: 7, title: '7桁の数字のみ入力してください' %>
  </div>

  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, required: true %>
  </div>

  <div>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, required: true %>
  </div>

  <div>
    <%= f.submit '変更内容を保存', class: "btn btn-success" %>
  </div>
<% end %>
