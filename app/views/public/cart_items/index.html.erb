<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>

<% if @cart_items.empty? %>
  <p>カートに商品が入ってません。</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <!-- 商品名 -->
          <td>
            <%= image_tag cart_item.item.image.variant(resize: "50x50").processed %>
            <%= cart_item.item.name %>
          </td>
          <!-- 単価税込 -->
          <td><%= number_with_delimiter(cart_item.item.tax_included_price.floor) %></td>
          <!-- 数量選択 -->
          <td>
            <%= form_with model: cart_item, method: :patch, local: true do |f| %>
              <%= f.select :amount, *[1..100], selected: cart_item.amount %>
              <%= f.submit "変更" %>
            <% end %>
          </td>
          <!-- 小計 -->
          <td><%= number_with_delimiter(cart_item.item.tax_included_price.floor * cart_item.amount.floor) %></td>
          <!-- 削除ボタン -->
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete %></td>
        </tr>
      </tbody>
    <% end %>
  </table>

  <%= link_to "買い物を続ける", root_path %>

<p>合計金額 <%= number_with_delimiter(@cart_items.sum { |cart_item| cart_item.item.tax_included_price.floor * cart_item.amount }) %>円</p>

  <%= link_to "情報入力に進む", new_order_path %>
<% end %>











