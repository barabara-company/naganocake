<h1>注文履歴一覧</h1>

<table>
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <!-- 注文日 strftime("%Y/%m/%d") で yyyy/mm/dd表記に変更 -->
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>

      <!-- 配送先 -->
      <td>
      〒<%= order.postal_code %><br>
      <%= order.address %><br>
      <%= order.name %>
      </td>

      <!-- 注文商品 -->
      <td>
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
        <% end %>
      </td>
      <!-- 支払金額 -->
      <td><%= order.order_detail.price %>円</td>

      <!-- ステータス 英文のままで良かったらorder.statusだけでいい -->
      <td><%= t("enums.order.status.#{order.status}") %></td>

      <!-- 注文詳細 -->
      <td><%= link_to "表示する", order_path(order) %></td>
    <% end %>
  </tbody>
</table>
