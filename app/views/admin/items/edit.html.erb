<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local: true, html: { multipart: true } do |f| %> 

  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.label :name, "商品名" %>
  <%= f.text_area :name, placeholder: "商品名" %>

  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction, placeholder: "商品説明" %>

  <%= f.label :genre_id, "ジャンル" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, @item.genre_id) %>

  <%= f.label :price, "税抜価格" %>
  <%= f.number_field :price, placeholder: "1000", min: 0, step: 1 %> 円

  <%= f.label :is_active, "販売ステータス" %>
  <!-- 販売中 -->
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active_selling, "販売中" %>
  <!-- 販売中止 -->
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active_stopped, "販売停止中" %>
  
  <%= f.submit "変更を保存" %>
  <% end %>