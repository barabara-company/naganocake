<h3><%= "#{@customer.last_name} #{@customer.first_name}"%> さんの会員詳細</h3>

<table>
  <tr>
    <th>会員ID</th>
    <th><%= @customer.id %></th>
  </tr>
  <tr>
    <th>氏名</th>
    <th><%= @customer.last_name %> <%= @customer.first_name %></th>
  </tr>
  <tr>
    <th>フリガナ</th>
    <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
    <tr>
    <th>会員ステータス</th>
      <% if @customer.is_active == true %>
        <td class="text-success"><strong><%= "有効" %></strong></td>
      <% else %>
        <td class="text-secondary"><strong><%= "無効" %></strong></td>
      <% end %>
  </tr>
</table>

<span>
  <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-sm btn-success" %>
  <%= link_to "注文履歴一覧を見る", admin_root_path,class: "btn btn-sm btn-primary" %>
</span>

