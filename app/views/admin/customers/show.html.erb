<h4 class="bg-light text-dark d-inline-block px-3 py-2 rounded mb-4 ml-5 mt-4">
  <%= "#{@customer.last_name} #{@customer.first_name}" %> さんの会員詳細
</h4>

<div class="container w-75 mx-auto mb-4">
  <!-- 会員情報 -->
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">会員ID</div>
    <div class="col-7"><%= @customer.id %></div>
  </div>
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">氏名</div>
    <div class="col-7"><%= @customer.last_name %> <%= @customer.first_name %></div>
  </div>
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">フリガナ</div>
    <div class="col-7"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></div>
  </div>
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">郵便番号</div>
    <div class="col-7"><%= @customer.postal_code %></div>
  </div>
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">住所</div>
    <div class="col-7"><%= @customer.address %></div>
  </div>
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">電話番号</div>
    <div class="col-7"><%= @customer.telephone_number %></div>
  </div>
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">メールアドレス</div>
    <div class="col-7"><%= @customer.email %></div>
  </div>
  <div class="row mb-2 py-2">
    <div class="col-3 font-weight-bold">会員ステータス</div>
    <div class="col-7 <%= @customer.is_active ? 'text-success' : 'text-secondary' %>">
      <strong><%= @customer.is_active ? "有効" : "退会" %></strong>
    </div>
  </div>
</div>

<div class="text-center">
  <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success btn-sm", style: "margin-right: 70px;" %>
  <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary btn-sm", style: "margin-right: 150px;"%>
</div>