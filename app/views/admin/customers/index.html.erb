<div class="container mt-4">
<h5><strong><span class="bg-light text-dark px-2">会員一覧</strong></h5>
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_active == true %>
                <td class="text-success"><strong><%= "有効" %></strong></td>
              <% else %>
                <td class="text-secondary"><strong><%= "退会" %></strong></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- ページネーション -->
<div class="d-flex justify-content-center mt-1">
  <%= paginate @customers %>
</div>

