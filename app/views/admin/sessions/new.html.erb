<div class="container d-flex justify-content-center">
  <div class="w-50">

    <h5><span class="bg-light text-dark px-1" style="line-height: 3;">管理者ログイン</span></h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3 d-flex align-items-center">
        <%= f.label :email, "メールアドレス", class: "form-label text-nowrap me-3 w-25 text-end" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50", placeholder: "sample@example.com" %>
      </div>
    
      <div class="mb-3 d-flex align-items-center">
        <%= f.label :password, "パスワード", class: "form-label text-nowrap me-3 w-25 text-end" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
      </div>
    
      <div class="text-center mb-3">
        <%= f.submit "ログイン", class: "btn btn-primary w-25" %>
      </div>
    <% end %>
    
  </div>  
</div>




