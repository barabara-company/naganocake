<h4 class="bg-light text-dark d-inline-block px-3 py-2 rounded ml-5 mt-3">ジャンル一覧・追加</h4>

<!-- 新規ジャンル登録 -->
<div class="my-4">
  <%= form_with model: @genre, url: admin_genres_path, local: true, class: "form-inline" do |f| %>
    <div class="form-group mr-2">
      <label for="genre_name" class="m-5">ジャンル名</label>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control mr-5" %>
    </div>
    <%= f.submit "新規登録", class: "btn btn-success", style: "width: 150px;" %>
  <% end %>
</div>

<!-- ジャンル一覧 編集 -->
<div class="ml-5" style="width: 30%;">
  <table class="table no-vertical-borders">
    <thead class="thead-light">
      <tr>
        <th colspan="2" style="padding-left: 60px;">ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each_with_index do |genre, index| %>
        <tr style="<%= 'border-bottom: 1px solid #dee2e6;' if index == @genres.size - 1 %>">
          <td><%= genre.name %></td>
          <td class="text-right">
            <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>