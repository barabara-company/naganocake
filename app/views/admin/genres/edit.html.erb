<h3><span class="bg-light text-dark px-1">ジャンル編集</span></h3>

<%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, class: "ml-4" do |f| %>
  <div class="form-group d-flex">
    <p class="mr-4 mb-0">ジャンル名</p>
    <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control mr-4", style: "width: 300px;" %>
    <%= f.submit "変更を保存", class: "btn btn-primary", style: "height: calc(2.25rem + 2px);" %>
  </div>
<% end %>





