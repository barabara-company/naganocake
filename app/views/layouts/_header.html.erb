<header class="navbar navbar-expand-lg navbar-light bg-light py-4">
  <div class="container-fluid">
    <!-- ロゴ -->
    <% if admin_signed_in? %>
      <img src="<%= asset_path('naganocake_logo.jpg') %>" width="100" height="50" alt="Naganocake">
    <% else %>
      <%= link_to root_path do %>
        <img src="<%= asset_path('naganocake_logo.jpg') %>" width="100" height="50" alt="Naganocake">
      <% end %>
    <% end %>

    <!-- 名前表示 -->
    <div class="mx-auto">
      <% if customer_signed_in? %>
        <span class="navbar-text">ようこそ<%= current_customer.last_name %>さん！</span>
      <% end %>
    </div>

    <!-- ナビメニュー -->
    <ul class="navbar-nav ms-auto">
      <% if customer_signed_in? %>
        <li class="nav-item">
          <%= link_to "マイページ", customer_path(current_customer), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧", items_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "カート", cart_items_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
        </li>

      <% elsif admin_signed_in? %>
        <li class="nav-item">
          <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "会員一覧", admin_customers_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "注文履歴一覧", admin_root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧", items_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", new_customer_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</header>

<!-- 検索フォームをナビゲーションバーの下に配置 -->
<div class="container-fluid bg-light py-2">
  <form class="d-flex justify-content-center">
    <input class="form-control w-50" type="search" placeholder="商品を検索" aria-label="Search">
    <button class="btn btn-outline-success ms-2" type="submit">検索</button>
  </form>
</div>


